	 * ordersToRemove.add(existingOrder); } } } }
	 * 
	 * existingOrders.removeAll(ordersToRemove);
	 * 
	 * System.out.println("Updated Orders: " + existingOrders);
	 * existingProduct.setOrders(existingOrders); session.clear();
	 * session.update(existingProduct); System.out.println(existingProduct); }
	 */
	public void updateProduct(Product updatedProduct) {
	    Session session = sessionfactory.getCurrentSession();
	    Product existingProduct = getbyidproduct(updatedProduct.getId());

	    // Create a copy of existing orders to avoid modification while iterating
	    List<Order> existingOrdersCopy = new ArrayList<>(existingProduct.getOrders());

	    // Clear existing orders
	    existingProduct.getOrders().clear();

	    // Add new orders
	    for (Order updatedOrder : updatedProduct.getOrders()) {
	        updatedOrder.setProduct(existingProduct);
	        existingProduct.getOrders().add(updatedOrder);
	    }

	    // Remove orders not present in the updated list
	    for (Order existingOrder : existingOrdersCopy) {
	        if (!updatedProduct.getOrders().contains(existingOrder)) {
	            session.clear();

	            // Check if the order is still associated with the same product
	            if (existingProduct.equals(existingOrder.getProduct())) {
	                existingOrder.setProduct(null); // Set the product to null to detach it
	            }

	            session.delete(existingOrder);
	        }
	    }

	    // Update existing product
	    session.clear();
	    session.update(existingProduct);
	    System.out.println(existingProduct);
	}



	  public List<Product> searchProducts(Long id, String productname, Integer
	  price) { Session session = sessionfactory.getCurrentSession();
	  CriteriaBuilder builder = session.getCriteriaBuilder();
	  CriteriaQuery<Product> criteriaQuery = builder.createQuery(Product.class);
	  Root<Product> root = criteriaQuery.from(Product.class);
	  
	  Predicate predicate = builder.conjunction();
	  
	  if (id != null) { predicate = builder.and(predicate,
	  builder.equal(root.get("id"), id)); }
	  
	  if (productname != null && !productname.isEmpty()) { predicate =
	  builder.and(predicate, builder.like(builder.lower(root.get("productname")),
	  "%" + productname.toLowerCase() + "%")); }
	  
	  if (price != null) { predicate = builder.and(predicate,
	  builder.like(root.get("price").as(String.class), "%" + price.toString() +
	  "%"));
	  
	  }
	  
	  criteriaQuery.where(predicate);
	  
	  return session.createQuery(criteriaQuery).getResultList(); }
	 
	/*
